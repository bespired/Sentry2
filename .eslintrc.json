{
  "parser": "babel-eslint",
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "rules": {
    "import/no-unresolved": [2],
    "no-multi-spaces"     : 0,
    "padded-blocks"       : 0,
    "indent"              : 0,
    "no-tabs"             : 0,
    "semi"                : 0
  },
  "globals": {
    "phaser": true
  },
  "settings": {
    "import/core-modules": [ "phaser", "pixi", "p2" ]
  }
}
